<!DOCTYPE html>
{% if page.url starts with '/en' %}
    {%  set lang = 'en' %}
{% elseif page.url starts with '/de' %}
    {%  set lang = 'de' %}
{% elseif page.url starts with '/fr' %}
    {%  set lang = 'fr' %}
{% elseif page.url starts with '/es' %}
    {%  set lang = 'es' %}
{% endif %}
<html lang="{{ lang }}">
<head>
    {# Required meta tags always come first #}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    {# Bootstrap CSS #}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    {# page title #}
    {%if page.title is defined %}
        <title>CLUBS ♣ {{ page.title }}</title>
    {% endif %}

    {# additional styles #}
    <style type="text/css">
        .institutional-logo {height: 6em; margin: 0.5em}
    </style>
</head>
<body style="padding-top: 70px"> {# padding to avoid navbar overlaying content #}
<div class="container">
    <nav class="navbar fixed-top navbar-toggleable-sm navbar-inverse bg-inverse">
        <a class="navbar-brand" href="{{page.url[0:3]}}"><abbr title="Cross Lingual Bibliographic Search">CLUBS</abbr></a>
        <div class="navbar-nav">
            <a class="nav-item nav-link{% if page.content_id == 'project' %} active{% endif %}" href="/{{ lang }}/">
                {% if lang == 'en' %}
                    Project
                {% elseif lang == 'de' %}
                    Projekt
                {% elseif lang == 'fr' %}
                    Projet
                {% elseif lang == 'es' %}
                    Proyecto
                {% endif %}
            </a>
            <a class="nav-item nav-link{% if page.content_id == 'approaches' %} active{% endif %}"
                    {% if page.url starts with '/en' %}
                        href="{{page.url[0:3]}}/approaches/"
                    {% elseif page.url starts with '/de' %}
                        href="{{page.url[0:3]}}/ansaetze/"
                    {% elseif page.url starts with '/fr' %}
                        href="{{page.url[0:3]}}/approches/"
                    {% elseif page.url starts with '/es' %}
                        href="{{page.url[0:3]}}/TODO/"
                    {% endif %}
            >
                {% if page.url starts with '/en' %}
                    Approaches
                {% elseif page.url starts with '/de' %}
                    Ansätze
                {% elseif page.url starts with '/fr' %}
                    Approches
                {% elseif page.url starts with '/es' %}
                    TODO
                {% endif %}
            </a>
            <a class="nav-item nav-link{% if page.content_id == 'publications' %} active{% endif %}"
                    {% if page.url starts with '/en' %}
                        href="{{page.url[0:3]}}/publications/"
                    {% elseif page.url starts with '/de' %}
                        href="{{page.url[0:3]}}/veroeffentlichungen/"
                    {% elseif page.url starts with '/fr' %}
                        href="{{page.url[0:3]}}/publications/"
                    {% elseif page.url starts with '/es' %}
                        href="{{page.url[0:3]}}/publicaciones/"
                    {% endif %}
            >
                {% if page.url starts with '/en' %}
                    Publications
                {% elseif page.url starts with '/de' %}
                    Veröffentlichungen
                {% elseif page.url starts with '/fr' %}
                    Publications
                {% elseif page.url starts with '/es' %}
                    Publicaciones
                {% endif %}
            </a>
            <a class="nav-item nav-link{% if page.content_id == 'team' %} active{% endif %}"
                    {% if page.url starts with '/en' %}
                        href="{{page.url[0:3]}}/team/"
                    {% elseif page.url starts with '/de' %}
                        href="{{page.url[0:3]}}/team/"
                    {% elseif page.url starts with '/fr' %}
                        href="{{page.url[0:3]}}/equipe/"
                    {% elseif page.url starts with '/es' %}
                        href="{{page.url[0:3]}}/equipo/"
                    {% endif %}
            >
                {% if page.url starts with '/en' %}
                    Team
                {% elseif page.url starts with '/de' %}
                    Team
                {% elseif page.url starts with '/fr' %}
                    Équipe
                {% elseif page.url starts with '/es' %}
                    Equipo
                {% endif %}
            </a>
        </div>
        <div class="navbar-nav ml-auto">
            <a class="nav-item nav-link{% if lang == 'en' %} active{%endif%}" href="/en/{{ site[page.content_id].en }}">EN</a>
            <a class="nav-item nav-link{% if lang == 'de' %} active{%endif%}" href="/de/{{ site[page.content_id].de }}">DE</a>
            <!--
            <a class="nav-item nav-link{% if lang == 'fr' %} active{%endif%}" href="/fr/{{ site[page.content_id].fr }}">FR</a>
            <a class="nav-item nav-link{% if lang == 'es' %} active{%endif%}" href="/es/{{ site[page.content_id].es }}">ES</a>
            -->
        </div>
    </nav>
</div>

<div class="container">
    {% block content %}
        {{ page.content }}
    {% endblock %}
</div>

<hr>

<footer>
    <div class="container">
        <div class="row">
            <div class="footer-col col-md-4">
                <h4>
                    {% if page.url starts with '/en' %}
                        Partners
                    {% elseif page.url starts with '/de' %}
                        Partner
                    {% elseif page.url starts with '/fr' %}
