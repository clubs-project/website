<!DOCTYPE html>
{% if page.url starts with '/en' %}
    {%  set lang = 'en' %}
{% elseif page.url starts with '/de' %}
    {%  set lang = 'de' %}
{% elseif page.url starts with '/fr' %}
    {%  set lang = 'fr' %}
{% elseif page.url starts with '/es' %}
    {%  set lang = 'es' %}
{% endif %}
<html lang="{{ lang }}">
<head>
    {# Required meta tags always come first #}
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    {# Bootstrap CSS #}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">

    {# page title #}
    {%if page.title is defined %}
        <title>CLUBS ♣ {{ page.title }}</title>
    {% endif %}

    {# favicons - thanks to realfavicongenerator.net #}
    <link rel="apple-touch-icon" sizes="180x180" href="/assets/images/logos/project/favicons/apple-touch-icon.png">
    <link rel="icon" type="image/png" href="/assets/images/logos/project/favicons/favicon-32x32.png" sizes="32x32">
    <link rel="icon" type="image/png" href="/assets/images/logos/project/favicons/favicon-16x16.png" sizes="16x16">
    <link rel="manifest" href="/assets/images/logos/project/favicons/manifest.json">
    <link rel="mask-icon" href="/assets/images/logos/project/favicons/safari-pinned-tab.svg" color="#5bbad5">
    <link rel="shortcut icon" href="/assets/images/logos/project/favicons/favicon.ico">
    <meta name="msapplication-config" content="/assets/images/logos/project/favicons/browserconfig.xml">
    <meta name="theme-color" content="#ffffff">

    {# additional styles #}
    <style type="text/css">
        .institutional-logo {height: 6em; margin: 0.5em}
    </style>

    {# piwik tracking #}
    <script type="text/javascript">
        var _paq = _paq || [];
        _paq.push(['trackPageView']);
        _paq.push(['enableLinkTracking']);
        (function() {
            var u="//analytics.clubs-project.eu:444/";
            _paq.push(['setTrackerUrl', u+'piwik.php']);
            _paq.push(['setSiteId', '1']);
            var d=document, g=d.createElement('script'), s=d.getElementsByTagName('script')[0];
            g.type='text/javascript'; g.async=true; g.defer=true; g.src=u+'piwik.js'; s.parentNode.insertBefore(g,s);
        })();
    </script>
</head>
<body style="padding-top: 70px"> {# padding to avoid navbar overlaying content #}
<div class="container">
    <nav class="navbar fixed-top navbar-toggleable-sm navbar-inverse bg-inverse">
        <a class="navbar-brand" href="{{page.url[0:3]}}"><abbr title="Cross Lingual Bibliographic Search">CLUBS</abbr></a>
        <div class="navbar-nav">
            <a class="nav-item nav-link{% if page.content_id == 'project' %} active{% endif %}" href="/{{ lang }}/">
                {% if lang == 'en' %}
                    Project
                {% elseif lang == 'de' %}
                    Projekt
                {% elseif lang == 'fr' %}
                    Projet
                {% elseif lang == 'es' %}
