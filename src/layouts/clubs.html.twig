<body style="padding-top: 70px"> <!-- padding to avoid navbar overlaying content -->
<div class="container">
    <nav class="navbar fixed-top navbar-toggleable-sm navbar-inverse bg-inverse">
        <a class="navbar-brand" href="#"><abbr title="Cross Lingual Bibliographic Search">CLUBS</abbr></a>
        <div class="navbar-nav">
            <a class="nav-item nav-link{% if page.content_id == 'project' %} active{% endif %}" href="{{page.url[0:3]}}">
                {% if page.url starts with '/en' %}
                    Project
                {% elseif page.url starts with '/de' %}
                    Projekt
                {% elseif page.url starts with '/fr' %}
                    Projet
                {% elseif page.url starts with '/es' %}
                    Proyecto
                {% endif %}
            </a>
            <a class="nav-item nav-link{% if page.content_id == 'team' %} active{% endif %}"
                    {% if page.url starts with '/en' %}
                        href="{{page.url[0:3]}}/team/"
                    {% elseif page.url starts with '/de' %}
                        href="{{page.url[0:3]}}/team/"
                    {% elseif page.url starts with '/fr' %}
                        href="{{page.url[0:3]}}/equipe/"
                    {% elseif page.url starts with '/es' %}
                        href="{{page.url[0:3]}}/equipo/"
                    {% endif %}
            >
                {% if page.url starts with '/en' %}
                    Team
                {% elseif page.url starts with '/de' %}
                    Team
                {% elseif page.url starts with '/fr' %}
                    Équipe
                {% elseif page.url starts with '/es' %}
                    Equipo
                {% endif %}
            </a>
            <!--
            <li class="nav-item{% if page.content_id == 'publications' %} active{% endif %}">
                {% if page.url starts with '/en' %}
                    <a class="nav-link" href="/en/publications/">Publications</a>
                {% elseif page.url starts with '/de' %}
                    <a class="nav-link" href="/de/veroeffentlichungen/">Veröffentlichungen</a>
                {% elseif page.url starts with '/fr' %}
                    <a class="nav-link" href="/fr/publications/">Publications</a>
                {% elseif page.url starts with '/es' %}
                    <a class="nav-link" href="/es/publicaciones/">Publicaciones</a>
                {% endif %}
            </li>
            -->
        </div>
        <div class="navbar-nav ml-auto">
                <a class="nav-item nav-link{% if page.url starts with '/en' %} active{%endif%}" href="/en/{{ site[page.content_id].en }}">EN</a>
                <a class="nav-item nav-link{% if page.url starts with '/de' %} active{%endif%}" href="/de/{{ site[page.content_id].de }}">DE</a>
                <a class="nav-item nav-link{% if page.url starts with '/fr' %} active{%endif%}" href="/fr/{{ site[page.content_id].fr }}">FR</a>
                <a class="nav-item nav-link{% if page.url starts with '/es' %} active{%endif%}" href="/es/{{ site[page.content_id].es }}">ES</a>
        </div>
    </nav>
</div>

<div class="container">
    {% block content %}
        {{ page.content }}
    {% endblock %}
</div>

<hr>
